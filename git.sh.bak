#!/bin/bash

# ================================
# Script para enviar bot pro GitHub
# Substitui tudo no repositório
# ================================

# Configurações
REPO="https://github.com/saniofc/bot.git"
BRANCH="main"
COMMIT_MSG="Atualização do bot"

echo "Iniciando push para o GitHub..."

# Inicializa git se não houver
if [ ! -d ".git" ]; then
    git init
    git remote add origin $REPO
fi

# Adiciona todos os arquivos
git add .

# Commit
git commit -m "$COMMIT_MSG"

# Força push para o branch principal
git push -u origin $BRANCH --force

echo "Push concluído com sucesso!"